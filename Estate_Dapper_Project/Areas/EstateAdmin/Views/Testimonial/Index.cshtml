@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/EstateAdmin/Views/Shared/_AdminLayout.cshtml";
}
 
<style>
    img {
        border-radius: 50%
    }
</style>
<div class="card-body">
    <h4 class="card-title">Basic Table</h4>
    <div class="table-responsive">
        <table class="table header-border">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Resim</th>
                    <th scope="col">Ad Soyad</th>
                    <th scope="col">Ünvan</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.TestimonialID</th>
                        <td><img src="@item.ImageUrl" height="50" width="50" /></td>
                        <td>@item.NameSurname</td>
                        <td>@item.Degree</td>
                        <td><a href="/EstateAdmin/Testimonial/DeleteTestimonial/@item.TestimonialID/" class="btn btn-outline-danger">Sil</a> </td>
                        <td><a href="/EstateAdmin/Testimonial/UpdateTestimonial/@item.TestimonialID/" class="btn btn-outline-success">Güncelle</a> </td>
                        <td></td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<a href="#" class="btn btn-outline-info">Yeni Kayıt Ekle</a>

