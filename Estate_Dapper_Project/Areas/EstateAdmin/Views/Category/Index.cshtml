@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/EstateAdmin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    img {
        border-radius: 50%
    }
</style>
<div class="card-body">
    <h4 class="card-title">Basic Table</h4>
    <div class="table-responsive">
        <table class="table header-border">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kategori Adı</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.CategoryID</th>
                        <td>@item.CategoryName</td>
                        <td><a href="/EstateAdmin/Category/DeleteCategory/@item.CategoryID/" class="btn btn-outline-danger">Sil</a> </td>
                        <td><a href="/EstateAdmin/Category/UpdateCategory/@item.CategoryID/" class="btn btn-outline-sucsess">Güncelle</a> </td>
                        <td></td>
                    </tr>
                }
                
             
            </tbody>
        </table>
    </div>
</div>
<a href="#" class="btn btn-outline-info">Yeni Kayıt Ekle</a>
